{
  "name": "CheckMate Check",
  "description": "Runs a CheckMate check on the current workspace after any command completes",
  "icon": "check-circle",
  "eventTriggers": [
    {
      "event": "after_command",
      "pattern": "*"
    }
  ],
  "command": "node",
  "args": [
    "dist/index.js",
    "status"
  ],
  "showOutput": true,
  "maxRuns": 1,
  "conditions": [
    {
      "type": "fileExists",
      "path": ".checkmate"
    }
  ]
} 